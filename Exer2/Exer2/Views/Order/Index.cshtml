@model IEnumerable<Exer2.Order>

@{
    ViewBag.Title = "Orders";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0"><i class="fas fa-shopping-cart"></i> Orders</h3>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </p>
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Order Date</th>
                        <th>Agent</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.Agent.AgentName</td>
                            <td>
                                @Html.ActionLink("Print", "Print", new { id = item.OrderID }, new { @class = "btn btn-outline-primary btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>