@model IEnumerable<OrderDetail>
@{
    Layout = "_Layout";
}

<div class="col-12 p-3">
    <h1 class="m-auto">Order Report</h1>
     <a asp-action="Index" asp-controller="Orders">Go back</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Order ID</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Unit Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (OrderDetail od in Model)
            {
                <tr>
                    <td>@od.ID</td>
                    <td>@od.OrderID</td>
                    <td>@od.Item.ItemName</td>
                    <td>@od.Quantity</td>
                    <td>@od.UnitAmount</td>
                </tr>
            }
        </tbody>
        
    </table>
</div>