@model IEnumerable<Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if(!Convert.ToBoolean(ViewData["Sort"]))
{
    <a class="btn btn-info" asp-action="Sort" asp-route-sort="true">Sort by Most purchased Item</a>
}
else
{
    <a class="btn btn-info" asp-action="Sort" asp-route-sort="false">Sort by Nothing</a>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ItemID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ItemID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ItemID">Delete</a>
                        </td>
                    </tr>
                }
        
    </tbody>
</table>


